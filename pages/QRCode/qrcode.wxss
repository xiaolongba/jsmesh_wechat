/* pages/test/test.wxss */

page {
    background: #f5f5f5;
}

.input-wrapper {
    margin: 40rpx auto 0 auto;
    width: 600rpx;
    height: 88rpx;
    border: 2rpx solid #ddd;
    border-radius: 16rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}

.input-wrapper input {
    font-size: 32rpx;
    line-height: 88rpx;
    height: 100%;
}
page{
    height: 100%;
}
.content {
    height: 100%;
}
.button-wrapper {
    margin-top: 40rpx;
}
.body{
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.canvas {
    margin: 40rpx auto;
}

.tip {
    text-align: center;
    margin: 20rpx auto;
}

.line {
    width: 100%;
    height: 2rpx;
    background: #ddd;
}
.text_center{
    display: flex;
    justify-content: center;
}
